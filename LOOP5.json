{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://api.beta.ons.gov.uk/v1/data?uri=employmentandlabourmarket/peopleinwork/earningsandworkinghours/timeseries/kac3/lms",
    "format": {
      "type": "json",
      "property": "months"
    }
  },
  "title": {
    "text": "Total Income Growth",
    "subtitle": "Total Pay Growth (% Monthly Change)",
    "anchor": "start"
  },
  "width": 400,
  "height": 300,
  "mark": {
    "type": "line",
    "color": "red",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Total Pay Growth (%)",
      "scale": {"zero": false}
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "title": "Date"},
      {"field": "value", "type": "quantitative", "title": "Pay Growth (%)"}
    ]
  }
}
